# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketplaces-inhelp
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=mirakl-catalogue-marketplaces
